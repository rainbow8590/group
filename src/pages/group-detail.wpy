<style lang="less">
  @import '../util/public.less';
  .container{
    padding-bottom:110rpx; 
    height: 100%;
    overflow-y: scroll;
  }
  image{
    width: 100%;
    // height: 400rpx;
  }
  .share-wrap{
    background: #fff;
    margin: 0;
    padding-right: 0;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    color: #e55e4e;
    // text-align: center;
     image.share{
        width: 44rpx;
        height: 44rpx;
      }
      text{
        padding-left: 10rpx;
      }
  }
 
  .top-banner{
    width: 100%;
    height: 400rpx;
    overflow: hidden;
  }
  .group-detail{
    width:100%;
    padding: 50rpx 32rpx;
    box-sizing: border-box;
    .group-title{
      font-size: 36rpx;
    }
    .group-date{
      font-size: 26rpx;
      color: #3c3c3c;
    }
    .group-price{
      margin-top: 34rpx;
      display: flex;
      justify-content: space-between;
      align-items: center;
      .newprice{
        font-size: 44rpx;
        color: #ff3c00;
      }
      .oldprice{
        margin-left: 24rpx;
        font-size: 24rpx;
        line-height: 28rpx;
        color: #b1b0b0;
        flex-direction: column;
        .old{
          text-decoration: line-through;
        }
      }
      .num{
        font-size: 26rpx;
        color: #3c3c3c;
      }
    }
    
  }
  .btns{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    color: #fff;
    font-size: 30rpx;
    background: #fff;
    .btn{
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }
    button{
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
      color: #fff;
      font-size: 30rpx;
      line-height: 40rpx;
      background: rgba(0,0,0,0);
      
    }
    .redirect{
      width: 50%;
      height: 110rpx;
      background: #49d87b;
      // button{
      //   line-height: 90rpx;
      // }
    }
    .gogroup{
      width: 50%;
      height: 110rpx;
      background: @baseColor;
      // button{
      //   line-height: 110rpx;
      // }
    }
    .redirect1{
      width: 40%;
      line-height: 90rpx;
      height: 90rpx;
      // button{
      //   line-height: 90rpx;
      // }
    }
    .redirect2{
      width: 40%;
      line-height: 110rpx;
      background: #fff;
      color: @baseColor;
      border-top: 2rpx solid @baseColor;
      button{
        line-height: 110rpx;
      }
    }
    .redirect3{
      width: 52%!important;
    }
    .gogroup1{
      width: 60%;
      line-height: 90rpx;
      height: 90rpx;
      button{
        line-height: 90rpx;
      }
    }
    .gogroup2{
      width: 60%;
      line-height: 110rpx;
      background: @baseColor;
      color: #fff;
      border-top: 2rpx solid @baseColor;
      button{
        line-height: 110rpx;
      }
    }
    .gogroup3{
      width: 48%!important;
    }
    .group-again{
      width: 90%;
      height: 90rpx;
      margin: 10rpx auto;
      border-radius: 10rpx;
      line-height: 90rpx;
      text-align: center;
      button{
        line-height: 90rpx;
      }
      // margin: 10rpx 0;
    }
    
    .group-over{
      width: 90%;
      line-height: 90rpx;
      height: 90rpx;
      margin: 10rpx auto;
      text-align: center;
      border-radius: 10rpx;
      background: #ccc;
      button{
        line-height: 90rpx;
      }
    }
  }
  .btns1{
    height: 90rpx;
  }
  
  .now-detail{
    width: 100%;
    padding-top: 42rpx;
    padding-bottom: 32rpx;
    margin-bottom: 24rpx;
    background: #f6f6f6;
    .state{
      font-size: 30rpx;
      text-align: center;
    }
    .state1{
      font-size: 26rpx;
      text-align: center;
      line-height: 90rpx;
    }
    .red{
      color: #ff3c00;
    }
    .group-avtor{
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      padding: 0 50rpx;
      .item{
        padding: 0 25rpx 24rpx 25rpx;
        position: relative;
        
        .avtor{
          width:132rpx;
          height: 132rpx;
          border-radius: 50%;
          border: 2rpx solid @baseColor;
          overflow: hidden;
          font-size: 100rpx;
          color: #c9c9c9;
          text-align: center;
          image{
            width: 132rpx;
            height: 132rpx;
          }
        }
        .avtor-name{
          padding-top: 24rpx;
          font-size: 26rpx;
          height: 26rpx;
          color: #b1b0b0;
          text-align: center;
        }
        .avtor-leader{
          position: absolute;
          left: 50%;
          bottom: 72rpx;
          margin-left: -50rpx;
          width: 100rpx;
          color: #fff;
          font-size: 26rpx;
          text-align: center;
          background: @baseColor;
          border-radius: 30rpx;
        }
        .avtor1{
          border: 1px dashed #c9c9c9;
        }
      }
    }
    .look-order{
      text-align: center;
      line-height: 50rpx;
      font-size: 26rpx;
      color: #b1b0b0;
      background:transparent;
    }
    .timebg{
      background: #333134;
      display: inline-block;
      margin: 0 10rpx;
      padding: 0 6rpx;
      width:38rpx;
      border-radius: 10rpx;
      color: #fff;
    }
  }
  .order-arrow{
      width: 7px;
      height: 7px;
      border-top: 1px solid #1e1e1e;
      border-right: 1px solid #1e1e1e;
      transform: rotate(45deg);
      margin-left: 28rpx;
    }
    .back-index{
      position: fixed;
      right: 0;
      top: 600rpx;
      width: 150rpx;
      height: 60rpx;
      line-height: 60rpx;
      color: #fff;
      background: #616161;
      font-size: 26rpx;
      padding-left: 20rpx;
      border-top-left-radius: 40rpx;
      border-bottom-left-radius: 40rpx;
      text{
        display: inline-block;
        width: 14rpx;
        height: 14rpx;
        border-bottom: 3rpx solid #fff;
        border-left: 3rpx solid #fff;
        transform: rotate(45deg);
        margin-right: 6rpx;
      }

    }
</style>
<template>
  <view class="container" wx:if="{{ajaxOver}}">
   <!--  <image src="../image/democode.png" @tap="see" /> -->
    <view class="top-banner">
      <image src="{{activity.project_top_image}}" mode="widthFix" />
    </view>
    <view class="activity-title activity-title1 flex">
      <text>{{activity.project_title}}</text>
      <button class="share-wrap flex" open-type="share" wx:if="{{activity.project_signup_end_time*1000 > nowTime && activity.published_time!= 0}}">
        <image class="share" src="../image/share.png" />
        <text>分享</text>
      </button>
      </view>
    <view class="info info1">
        <view class="buy flex">
            <view class="des">
              <view class="time">{{activity.project_time}}</view>
                <!-- 单独购买价格展示 -->
                <view class="price flex"  wx:if="{{activity.project_type==1}}">
                  <view class="now-price">¥{{activity.project_price}}</view>
                </view>
                <!-- 仅团购价格展示 -->
                <view class="price flex"  wx:if="{{activity.project_type==2}}">
                  <view class="now-price">¥{{activity.project_group_price}}</view>
                  <view class="old-price flex">
                    <text class="old" style="opacity:0">¥{{activity.project_price}}</text>
                    <text>{{activity.project_group_num}}人团</text>
                  </view>
                </view>
                <!-- 单独购买和团购价格展示 -->
                <view class="price flex"  wx:if="{{activity.project_type==3}}">
                  <view class="now-price">¥{{activity.project_group_price}}</view>
                  <view class="old-price flex">
                    <text class="old">¥{{activity.project_price}}</text>
                    <text>{{activity.project_group_num}}人团</text>
                  </view>
                </view>
            </view>
            <view class="btn">
              <button style="opacity:0">购买</button>
              <view>{{activity.signup_num}}人已购买</view>
            </view>
        </view>
      </view>
    <!-- 拼团详情 提示语 -->
    <view class="now-detail" wx:if="{{userLen > 0}}">
      <!-- 拼团成功提示语  已购买 && 参团人满-->
      <view class="success" wx:if="{{ActivityStatus == 1 && activity.project_group_num == activity.project_group_user.length}}">
        <view class="state"><text class="red">拼团成功，</text>请加入活动微信群</view>
        <view class="state1"><text class="red">{{activity.project_group_num}}人</text>完成参团</view>
      </view>
      <!-- 拼团失败提示语  已购买 && 参团人不满 && 购买时间超过24小时-->
      <view class="fail" wx:if="{{ ActivityStatus == 2 }}">
        <view class="state">已退款 拼团失败</view>
        <view class="state1">还差<text class="red">{{activity.project_group_num - activity.project_group_user.length}}人</text>参团</view>
      </view>
      <!-- 拼团倒计时提示语 已购买 && 参团人不满 -->
      <view class="countdown" wx:if="{{ActivityStatus !=2 && activity.project_group_countdown > 0 && activity.project_group_user.length>0 && activity.project_group_num > activity.project_group_user.length}}">
        <view class="state">距拼团结束<text class="timebg">{{hours}}</text>:<text class="timebg">{{mins}}</text>:<text class="timebg">{{secs}}</text>
        </view>
        <view class="state1">还差<text class="red">{{activity.project_group_num - activity.project_group_user.length}}人</text>参团</view>
      </view>
      <view class="group-avtor flex">
        <repeat for="{{activity.project_group_user}}" key="index" index="index" item="item"> 
          <view class="item">
              <view class="avtor"><image src="{{item.avatar_url}}" /></view>
              <view class="avtor-name">{{item.nickname}}</view>
              <view class="avtor-leader" wx:if="{{index == 0}}">团长</view>
          </view>
        </repeat>
        <repeat for="{{activity.project_group_num-activity.project_group_user.length}}" key="index" index="index" item="item"> 
          <view class="item">
              <view class="avtor avtor1">?</view>
              <view class="avtor-name"></view>
          </view>
        </repeat>
      </view>
      <!-- <form @submit="goOrderDetail" report-submit="true" wx:if="{{selfInUsers && selfStatus == 1}}">
        <button class="look-order" formType="submit">查看订单 > </button>
      </form> -->
    </view>
  <!-- {{activity.published_time}}~~0000 -->
    <image src="{{activity.project_content_image}}" mode="widthFix" />
    <view wx:if="{{activity.published_time!= 0&& (activity.project_signup_end_time*1000 > nowTime || (activity.project_signup_end_time*1000 < nowTime &&activity.order_status == 1 ))}}">
      <view wx:if="{{!ActicityUser}}">
        <view class="btns flex" wx:if="{{activity.project_type == 3  }}">
          <view class="btn redirect">
            <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')" class="flex">
              <view>¥{{activity.project_price}}</view>
              <text>单独购买</text>
            </button>
          </view>
          <view class="btn gogroup flex">
            <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')" class="flex">
              <view>¥{{activity.project_group_price}}</view>
              <text>发起拼团</text>
            </button>
          </view>
        </view>
        <view class="btns flex"  wx:elif="{{activity.project_type == 2 }}">
          <view class="btn redirect redirect2 flex">
            <text>¥{{activity.project_group_price}}</text>
          </view>
          <view class="btn gogroup gogroup2 flex">
            <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')">发起拼团</button>
          </view>
        </view>
        <view class="btns flex" wx:else="{{activity.project_type == 1 }}">
          <view class="btn redirect redirect2 flex">
            <text>¥{{activity.project_price}}</text>
          </view>
          <view class="btn gogroup gogroup2 flex">
            <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')">立即报名</button>
          </view>
        </view>
      </view>
      <view wx:else="{{ActicityUser}}">
        <!-- order_type  1 直接购买  2 团购 -->
        <!-- 单独购买, 显示价格 -->
        <view class="btns {{!activity.order_id?'':'btns1'}} flex" wx:if="{{activity.project_type == 1 || (activity.project_type == 3 && activity.order_type == 1) }}">
          <!-- 未下单  或 多校区 -->   
          <block wx:if="{{!activity.order_id || activity.project_style == 2}}">
            <view class="btn redirect redirect2 flex">
              <text>¥{{activity.project_price}}</text>
            </view>
            <view class="btn gogroup gogroup2 flex">
              <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')">立即报名</button>
            </view>
          </block>
          <!-- 下单已付款  project_style 1 单校区-->
          <block wx:if="{{activity.order_id && activity.order_status == 1 && activity.project_style==1}}">
            <view class="btn redirect redirect1 flex">
              <form @submit="goOrderDetail" report-submit="true">
                <button  formType="submit">查看订单 </button>
              </form>
            </view>
            <view class="btn gogroup gogroup1 flex">
              <form @submit="showGroupCode" report-submit="true">
                <button  formType="submit">加入活动微信群 </button>
              </form>
            </view>
          </block>
          <!-- 只下单 未付款 -->
          <view wx:elif="{{activity.order_id && activity.order_status == 0}}">
            <!-- 继续支付 -->
            <view class="btns flex" wx:if="{{remainTime > 0}}">
                <view class="btn redirect redirect2 redirect3 flex">
                  <text>您已成功抢占名额</text>
                </view>
                <view class="btn gogroup gogroup2 gogroup3 ">
                  <button open-type="getUserInfo"  @getuserinfo="lookPay('{{activity.order_type}}','{{activity.order_type == 1? activity.project_price : activity.project_group_price}}')">去支付( <text>{{selfHours}}:{{selfMins}}:{{selfSecs}} </text>)</button>
                </view>
            </view>
            <!-- 超时 重新下单 -->
            <view class="btns flex" wx:if="{{remainTime <= 0}}">
              <view class="btns flex" wx:if="{{activity.project_type == 3 }}">
                <view class="btn redirect">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')" class="flex">
                    <view>¥{{activity.project_price}}</view>
                    <text>单独购买</text>
                  </button>
                </view>
                <view class="btn gogroup flex">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')" class="flex">
                    <view>¥{{activity.project_group_price}}</view>
                    <text>发起拼团</text>
                  </button>
                </view>
              </view>
              <view class="btns flex" wx:if="{{activity.project_type == 1}}">
                <view class="btn redirect redirect2 flex">
                  <text>¥{{activity.project_price}}</text>
                </view>
                <view class="btn gogroup gogroup2 ">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_group_price}}')">立即报名</button>
                </view>
              </view>
      
            </view>
          </view>
        </view>
        <!-- 团购 和 团购/直接购买 -->
        <view class="ft" wx:if="{{activity.project_type == 2  || (activity.project_type == 3&&(activity.order_type == 2||activity.order_type == null)) }}">
          <!-- 下单并且已购买 -->
          <view wx:if="{{selfInUsers && selfStatus == 1 && activity.project_style == 1}}">
            <!-- 满团 -->
            <view class="btns btns1 flex"  wx:if="{{activity.project_group_num == activity.project_group_user.length }}">
              <view class="btn redirect redirect1 flex">
                <form @submit="goOrderDetail" report-submit="true">
                  <button  formType="submit">查看订单 </button>
                </form>
              </view>
              <view class="btn gogroup gogroup1 flex">
                <form @submit="showGroupCode" report-submit="true">
                  <button  formType="submit">加入活动微信群</button>
                </form>
              </view>
            </view>
            
            <!-- 团未满 -->
            <view wx:elif="{{activity.project_group_num > activity.project_group_user.length  && activity.project_style == 1}}">
              <!-- 倒计时 -->
              <!-- <view class="btns  flex" wx:if="{{ActivityStatus == 0 && countDown > 0}}"> -->
              <view class="btns  flex" wx:if="{{ActivityStatus == 0 }}">
                  <view class="btn redirect group-again">
                    <form @submit="showFriend" report-submit="true">
                      <button  formType="submit">邀请好友</button>
                    </form>
                  </view>
              </view>
              <!-- 已超时 -->
              <!-- <view  wx:if="{{countDown <= 0 && ActivityStatus == 2 }}"> -->
              <view  wx:if="{{ActivityStatus == 2 }}">
                <view class="btns flex" wx:if="{{activity.project_type == 3 }}">
                  <view class="btn redirect">
                    <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')" class="flex">
                      <view>¥{{activity.project_price}}</view>
                      <text>单独购买</text>
                    </button>
                  </view>
                  <view class="btn gogroup flex">
                    <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')" class="flex">
                      <view>¥{{activity.project_group_price}}</view>
                      <text>发起拼团</text>
                    </button>
                  </view>
                </view>
                <view class="btns flex" wx:if="{{activity.project_type == 2}}">
                  <view class="btn redirect redirect2 flex">
                    <text>¥{{activity.project_group_price}}</text>
                  </view>
                  <view class="btn gogroup gogroup2 ">
                    <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')">发起拼团</button>
                  </view>
                </view>
              </view>
            </view>
        </view>
          
          <!-- 只下单 未购买 -->
          <view wx:elif="{{selfInUsers && selfStatus == 0}}">
            <!-- 继续支付 -->
            <view class="btns flex" wx:if="{{activity.remain_time >= 0 && activity.project_group_countdown>0}}">
                <view class="btn redirect redirect2 redirect3 flex">
                  <text>您已成功抢占名额</text>
                </view>
                <view class="btn gogroup gogroup2 gogroup3 ">
                  <button open-type="getUserInfo"  @getuserinfo="lookPay('{{activity.order_type}}','{{activity.order_type == 1? activity.project_price : activity.project_group_price}}')">去支付( <text>{{selfHours}}:{{selfMins}}:{{selfSecs}} </text>)</button>
                </view>
            </view>
            <!-- 超时 重新下单 -->
            <view class="btns flex" wx:else="{{activity.remain_time <= 0}}">
              <view class="btns flex" wx:if="{{activity.project_type == 3 }}">
                <view class="btn redirect">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')" class="flex">
                    <view>¥{{activity.project_price}}</view>
                    <text>单独购买</text>
                  </button>
                </view>
                <view class="btn gogroup flex">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')" class="flex">
                    <view>¥{{activity.project_group_price}}</view>
                    <text>发起拼团</text>
                  </button>
                </view>
              </view>
              <view class="btns flex" wx:if="{{activity.project_type == 2}}">
                <view class="btn redirect redirect2 flex">
                  <text>¥{{activity.project_group_price}}</text>
                </view>
                <view class="btn gogroup gogroup2 ">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')">发起拼团</button>
                </view>
              </view>
      
            </view>
          </view>
          <!-- 未下单-->
          <view wx:if="{{selfInUsers == false}}">
              <view class="btns flex" wx:if="{{activity.project_type == 3 }}">
                <view class="btn redirect">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(1,'{{activity.project_price}}')" class="flex">
                    <view>¥{{activity.project_price}}</view>
                    <text>单独购买</text>
                  </button>
                </view>
                <view class="btn gogroup flex">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')" class="flex">
                    <view>¥{{activity.project_group_price}}</view>
                    <text>{{activity.project_group_user.length>0&&activity.project_group_num > activity.project_group_user.length?'参加拼团':'发起拼团'}}</text>
                  </button>
                </view>
              </view>
              <view class="btns flex" wx:if="{{activity.project_type == 2}}">
                <view class="btn redirect redirect2 flex">
                  <text>¥{{activity.project_group_price}}</text>
                </view>
                <view class="btn gogroup gogroup2 ">
                  <button open-type="getUserInfo" @getuserinfo="lookPay(2,'{{activity.project_group_price}}')">{{activity.project_group_user.length>0&&activity.project_group_num > activity.project_group_user.length?'参加拼团':'发起拼团'}}</button>
                </view>
              </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 活动已结束按钮 -->
    <view class="btns  flex" wx:if="{{activity.project_signup_end_time*1000 < nowTime && activity.order_status != 1 || activity.published_time==0}}">
      <view class="btn redirect group-over">
        <text>活动已结束{{activity.project_signup_end_time*1000}}--{{activity.order_status}}--{{activity.published_time}}</text>
      </view>
    </view>
    <!-- 支付 -->
    <view class="paypop {{showPay ?'fadein':''}} {{hidePay ?'fadeout':''}}" >
      <view class="paypop-wrap">
          <view class="close" ><image src="../image/close.png" @tap="closePay" /></view>
          <view class="price">¥{{buyPrice}}</view>
          <view class="info">
            <view>活动名称：{{activity.project_title}}</view>
            <view class="nobdb">上课时间：{{activity.project_time}}</view>
          </view>
          <button @tap="pay">微信支付</button>
      </view>
    </view>
    <!-- 加群提醒 -->
    <view class="paypop {{show ?'fadein':''}} {{hide ?'fadeout':''}}">
      <view class="paypop-wrap paypop-wrap1">
          <view class="close close1"><text>加群提醒</text><image src="../image/close.png" @tap="closeGroupCode" /></view>
          <view class="info info1">请在加群页面：</view>
