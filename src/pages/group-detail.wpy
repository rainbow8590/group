        // res.data.data.project_group_user.pop()
        let users = res.data.data.project_group_user;
        let selfId = this.ActicityUser.user_id;
        this.userLen = users.length;
        // 倒计时为负值 且 团不满 退款状态
        if(this.activity.project_group_countdown<=0 && this.activity.project_group_num > this.activity.project_group_user.length){
          this.ActivityStatus = 2;
        }
        // 倒计时
        if(this.activity.project_group_countdown>0 && this.activity.project_group_num > this.activity.project_group_user.length){
          this.ActivityStatus = 0;
        }
        // 团满 成功状态
        if(this.activity.project_group_num == this.activity.project_group_user.length){
          this.ActivityStatus = 1;
        }

        // console.log('ActivityStatus-ajax:'+this.ActivityStatus)

        if(users.length > 0){
          for(let i = 0; i < users.length; i++){
            if(selfId == users[i].user_id){
              if(users[i].order_status == 0){
                  this.userLen--;
              }
              
              // 用户在团购数组中
              this.selfInUsers = true;
              // 用户的状态  是否付款
              this.selfStatus = users[i].order_status;
              break;
            }
          }
        }else{
          this.selfInUsers = false;
        }
        
       
        if(this.activity.project_group_countdown > 0 && this.activity.project_group_num > this.activity.project_group_user.length ){
          this.countDown = this.activity.project_group_countdown;
          // this.countDown = 10;
          clearInterval(this.timer)
          this.timer = setInterval(()=>{
            let countdown = this.activity.project_group_countdown;
            if(countdown <= 0){
              clearInterval(this.timer)
              this.ActivityStatus = 2;
              // this.$apply();
            }else{
              let hours = Number(this.Countdown(countdown).hour) + this.Countdown(countdown).day*24;
              this.hours = hours < 10? '0'+hours : hours;
              this.mins = this.Countdown(countdown).min;
              this.secs = this.Countdown(countdown).sec;
              this.activity.project_group_countdown--;
              this.countDown--;
            }
            this.$apply();
          },1000)
        }

        // 本人下单未付款的倒计时
        if(this.activity.remain_time > 0){
          this.remainTime = this.activity.remain_time
          this.selfHours = 0;
          this.selfMins = 0;
          this.selfSecs = 0;
           clearInterval(this.timer1)
          this.timer1 = setInterval(()=>{
      
            if(this.activity.remain_time < 0){
              // 删除自己
              var len = this.activity.project_group_user.length;
              for(let i = 0; i < len; i++){
                let user = this.activity.project_group_user[i];
                if(user.user_id == this.ActicityUser.user_id){
                  this.activity.project_group_user.splice(i,1)
                }
              }
              this.userLen = this.activity.project_group_user.length;
              this.selfInUsers = false;
              // this.$apply();
              clearInterval(this.timer)
              clearInterval(this.timer1)
            }else{
              let hours = Number(this.Countdown(this.activity.remain_time).hour) + this.Countdown(this.activity.remain_time).day*24;
              this.selfHours = hours < 10? '0'+hours : hours;
              this.selfMins = this.Countdown(this.activity.remain_time).min;
              this.selfSecs = this.Countdown(this.activity.remain_time).sec;
              this.activity.remain_time--;
              this.remainTime--;
              // this.$apply();
            }
            this.$apply();
          },1000)
        }
        this.ajaxOver =  true;
        this.$apply();
      })
    }
